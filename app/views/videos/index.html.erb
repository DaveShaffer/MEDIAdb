<p id="notice"><%= notice %></p>

<h1>Listing Videos</h1>

<table>
  <thead>
    <tr>
      <th>Title:</th>
      <th>DVD ID:</th>
      <th colspan="3"></th>
    </tr>
  </thead>

  <tbody>
    <% @dvd.videos.each do |video| %>
      <tr>
        <td><%= video.title %></td>
        <td><%= video.dvd_id %></td>
        <td><%= link_to 'Show', dvd_video_path(@dvd, video) %></td>
        <td><%= link_to 'Edit', edit_dvd_video_path(@dvd, video) %></td>
        <td><%= link_to 'Destroy', dvd_video_path(@dvd, video), method: :delete, data: { confirm: 'Are you sure?' } %></td>
      </tr>
    <% end %>
  </tbody>
</table>

<br>

<%= link_to 'Show All Media', dvds_path %><br>
<%= link_to 'Add New File', new_dvd_video_path(@dvd) %><br>
