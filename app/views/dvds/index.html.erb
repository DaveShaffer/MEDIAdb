<p id="notice"><%= notice %></p>

<h1>Listing Dvds</h1>

<table>
  <thead>
    <tr>
      <th>DVD ID</th>
      <th>Format</th>
      <th>Belongs to</th>
      <th>User ID</th>
      <th colspan="3"></th>
    </tr>
  </thead>
  <!-- x = User.find(@dvd.user_id).name -->

  <tbody>
    <% @dvds.each do |dvd| %>
      <tr>
        <td><%= dvd.id %></td>
        <td><%= dvd.format %></td>
        <td><%= User.find(dvd.user_id).name %>
        <td><%= dvd.user_id %></td>
        <td><%= link_to 'Show', dvd %></td>
        <td><%= link_to 'Edit', edit_dvd_path(dvd) %></td>
        <td><%= link_to 'Destroy', dvd, method: :delete, data: { confirm: 'Are you sure?' } %></td>
      </tr>
    <% end %>
  </tbody>
</table>

